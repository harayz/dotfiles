  acpid \
  autocutsel \
  base-devel \
  dbus \
  dmenu \
  dnsmasq \
  feh \
  i3-wm \
  i3lock \
  i3status \
  mplayer2 \
  ntfs-3g \
  ntfsprogs \
  openssh \
  pmount \
  racket \
  ranger \
  readline \
  rlwrap \
  rsync \
  rxvt-unicode \
  screen \
  sudo \
  tar \
  xorg-xserver \
  xorg-xinit \
  xorg-xinput \
  wicd \
  xdg-user-dirs \
  xdg-utils \
  xterm \
  unzip \
  vim \
  zip

# Install packer from the AUR after this:
# 1.  Download packer from AUR.
# 2.  Compile with `makepkg -s`.
# 3.  Install with `pacman -U *.tar.xz`.

